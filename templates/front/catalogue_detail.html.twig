{% extends 'base.html.twig' %}

{% block title %}Page liste des produits{% endblock %}

{% block body %}
    <main>

        <section>
            <div class="container">
                <div class="row">


                    <img src="{{ asset('images/'~product.image) }}" alt="image de {{ product.name }}"
                         class="image-article">
                    <div class="card-body">
                        <h1 class="card-title">{{ product.name }}</h1>
                        <p class="card-text"></p>

                    </div>


                </div>
            </div>
        </section>
    </main>
{% endblock %}